<h1>{{ article.title }}</h1>
<small>
  {{ article.author }}
</small>
<time datetime="{{ article.published_at | date: '%Y-%m-%d' }}">{{ article.published_at | date: format: 'month_day_year' }}</time>

<img
  src="{{ article.image.src | img_url: '800x' }}"
  loading="eager"
  alt="{{ article.image.alt }}"
  width="800"
  height="auto" />


<div class="blogContent">{{ article.content }}</div>